<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@android:color/white"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_gravity="start"
            android:layout_marginBottom="8dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/productDetailsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Product Image -->
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_image_placeholder"
            android:contentDescription="Product Image"
            android:background="@drawable/purple_card_outline"
            android:padding="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to select product image"
            android:textSize="14sp"
            android:textColor="#9C27B0"
            android:layout_marginBottom="16dp" />


        <!-- Title Input -->
        <EditText
            android:id="@+id/productTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint=" Title"
            android:background="@drawable/purple_card_outline"
            android:drawableStart="@drawable/ic_title"
            android:paddingStart="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:layout_marginBottom="12dp" />


        <!-- Brand Selector -->
        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/productBrand"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint= "Select Brand"
            android:background="@drawable/purple_card_outline"
            android:drawableStart="@drawable/ic_brand"
            android:paddingStart="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginBottom="12dp" />


        <!-- Description Input -->
        <EditText
            android:id="@+id/productDescription"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:hint=" Description"
            android:gravity="top|start"
            android:background="@drawable/purple_card_outline"
            android:padding="12dp"
            android:textColor="#000000"
            android:drawableStart="@drawable/ic_descr"
            android:textColorHint="#888888"
            android:layout_marginBottom="12dp" />

        <!-- Price Input -->
        <EditText
            android:id="@+id/productPrice"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint=" Price"
            android:inputType="numberDecimal"
            android:background="@drawable/purple_card_outline"
            android:drawableStart="@drawable/ic_price"
            android:paddingStart="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:layout_marginBottom="20dp" />

        <!-- Sell Now Button -->
        <Button
            android:id="@+id/sellNowButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Sell Now"
            android:textColor="#FFFFFF"
            android:backgroundTint="#9C27B0"
            android:layout_marginBottom="12dp" />

        <!-- Cancel Button -->
        <Button
            android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Cancel"
            android:textColor="#9C27B0"
            android:backgroundTint="#EEEEEE" />

    </LinearLayout>
</ScrollView>
