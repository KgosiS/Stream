<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:id="@+id/fragment_container"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:backgroundTint="#9C27B0"
            app:cardCornerRadius="25dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/home_banner" />
        </androidx.cardview.widget.CardView>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/brandIconsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconApple"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_apple"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Apple Brand" />

                <ImageView
                    android:id="@+id/iconSamsung"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_samsung"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Samsung Brand" />

                <ImageView
                    android:id="@+id/iconNike"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_nike"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Nike Brand" />
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/shopAllItemsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop all items â†’"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#9C27B0"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/homeRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>
</ScrollView>